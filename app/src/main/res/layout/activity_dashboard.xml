<?xml version="1.0" encoding="utf-8"?>
<android.widget.LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F1F1F1"
    android:padding="20dp"
    tools:context="com.vitalyilchenko.tripcomputer.Dashboard">
    <android.widget.LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal">
        <RelativeLayout
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="0dp"
                android:gravity="center|bottom"
                android:text="Battery, V"
                android:textColor="#555"
                android:textSize="@dimen/descriptionTextSize" />
            <TextView
                android:id="@+id/txtVoltage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/valueBottomMargin"
                android:layout_marginLeft="-10dp"
                android:gravity="center|bottom"
                android:text="--"
                android:textColor="#090909"
                android:textSize="@dimen/valueTextSize" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="0dp"
                android:gravity="center|bottom"
                android:text="Coolant, \u00B0C"
                android:textColor="#555"
                android:textSize="@dimen/descriptionTextSize" />
            <TextView
                android:id="@+id/txtEngineTemp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/valueBottomMargin"
                android:gravity="center|bottom"
                android:text="--"
                android:textColor="#090909"
                android:textSize="@dimen/valueTextSize" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="0dp"
                android:gravity="center|bottom"
                android:text="Consump., l/100"
                android:textColor="#555"
                android:textSize="@dimen/descriptionTextSize" />
            <TextView
                android:id="@+id/txtConsumption"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/valueBottomMargin"
                android:gravity="center|bottom"
                android:text="--"
                android:textColor="#090909"
                android:textSize="@dimen/valueTextSize" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="0dp"
                android:gravity="center|bottom"
                android:text="Reserve, km"
                android:textColor="#555"
                android:textSize="@dimen/descriptionTextSize" />
            <TextView
                android:id="@+id/txtDistance"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/valueBottomMargin"
                android:gravity="center|bottom"
                android:text="--"
                android:textColor="#090909"
                android:textSize="@dimen/valueTextSize" />
        </RelativeLayout>
    </android.widget.LinearLayout>

    <android.widget.LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:padding="18dp">
            <TextView
                android:layout_weight="1"
                android:layout_width="10dp"
                android:layout_height="wrap_content"
                android:textColor="#555"
                android:text="Device:" />
            <TextView
                android:layout_weight="2"
                android:id="@+id/txtDeviceName"
                android:textColor="#090909"
                android:layout_width="10dp"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:text="N/A" />
            <TextView
                android:layout_weight="1"
                android:layout_width="10dp"
                android:layout_height="wrap_content"
                android:textColor="#555"
                android:text="State:" />
            <TextView
                android:layout_weight="2"
                android:id="@+id/txtState"
                android:textColor="#090909"
                android:layout_width="10dp"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:text="N/A" />
    </android.widget.LinearLayout>
    <android.widget.LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:gravity="bottom">
        <Button
            android:id="@+id/btnConnect"
            android:layout_weight="1"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_marginRight="8dp"
            android:text="Connect" />
        <Button
            android:id="@+id/btnReset"
            android:layout_weight="1"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_marginLeft="8dp"
            android:text="Reset" />
    </android.widget.LinearLayout>
</android.widget.LinearLayout>
